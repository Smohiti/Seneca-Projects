<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mareklaskowski.workshop2_summer2017.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView1" />

    <Button
        android:text="Launch Second Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2_button"
        android:layout_marginStart="61dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:text="Launch Third Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3_button"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/a2_button" />

    <EditText
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter Your Password"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/MyName"
        android:layout_alignStart="@+id/a2_button" />

    <EditText
        android:id="@+id/MyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Name"
        android:layout_above="@+id/StudentID"
        android:layout_alignStart="@+id/a2_button"
        android:layout_marginBottom="41dp" />

    <EditText
        android:id="@+id/StudentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter Your Student ID"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/a3_button"
        android:layout_alignStart="@+id/MyName" />
</RelativeLayout>

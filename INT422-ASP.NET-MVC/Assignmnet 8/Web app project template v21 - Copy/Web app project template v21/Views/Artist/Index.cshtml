@model IEnumerable<Web_app_project_template_v21.Controllers.ArtistBase>

@{
    ViewBag.Title = "Index";
}
<h2>Artist List</h2>
<p>
    @Html.ActionLink("Create New Artist", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>



        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthOrStartDate)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.UrlArtist)" alt="@Html.DisplayFor(modelItem => item.UrlArtist)" height="100" width="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>



            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
            </td>
        </tr>
    }
</table>

